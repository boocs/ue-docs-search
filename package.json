{
  "name": "ue-docs-search",
  "displayName": "Unreal Engine Docs Search",
  "description": "Searches highlight Unreal Engine code on https://docs.unrealengine.com",
  "version": "1.0.0",
  "publisher": "boocs",
  "license": "SEE LICENSE IN THE FILE: LICENSE",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.uproject"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ueDocsSearch.cppApi",
        "title": "Search UE C++ Api"
      },
      {
        "command": "ueDocsSearch.blueprintsApi",
        "title": "Search UE Blueprints Api"
      },
      {
        "command": "ueDocsSearch.documentation",
        "title": "Search UE Documentation"
      },
      {
        "command": "ueDocsSearch.answers",
        "title": "Search UE Answers"
      },
      {
        "command": "ueDocsSearch.forums",
        "title": "Search UE Forums"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ueDocsSearch.cppApi",
          "group": "4_search@1",
          "when": "editorHasSelection"
        },
        {
          "command": "ueDocsSearch.blueprintsApi",
          "group": "4_search@2",
          "when": "editorHasSelection"
        },
        {
          "command": "ueDocsSearch.documentation",
          "group": "4_search@3",
          "when": "editorHasSelection"
        },
        {
          "command": "ueDocsSearch.answers",
          "group": "4_search@4",
          "when": "editorHasSelection"
        },
        {
          "command": "ueDocsSearch.forums",
          "group": "4_search@5",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": { 
      "title": "ueDocsSearch",
      "properties": {
        "ueDocsSearch.openType": {
          "scope": "application",
          "type": "string",
          "default": "extension",
          "enum": [
            "extension",
            "chrome",
            "firefox",
            "chromium-browser",
            "opera",
            "msedge",
            "xdg-open"
          ],
          "enumDescription": [
            "Open in default browser (linux is forced chromium-browser, See README)",
            "Open in Chrome",
            "Open in Firefox",
            "Open in Chromium Browser",
            "Open in Opera",
            "Open in MS Edge (not supported in every OS)",
            "Open with linux xdg-open (read Ubuntu warning in README)"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "node": "^15.12.0"
  }
}
